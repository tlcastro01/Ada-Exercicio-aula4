@using aula4_exercicio.Models
@model IEnumerable<Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<h2>Lista de Clientes</h2>

<!-- Formulário para adicionar cliente -->
<form asp-action="Adicionar" method="post" class="mb-4">
    <div class="row">
        <div class="col-md-3">
            <input type="text" name="Nome" class="form-control" placeholder="Nome" required />
        </div>
        <div class="col-md-3">
            <input type="email" name="Email" class="form-control" placeholder="Email" required />
        </div>
        <div class="col-md-3">
            <input type="text" name="Telefone" class="form-control" placeholder="Telefone" required />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-success">Adicionar Cliente</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefone</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@cliente.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="ListarContas" asp-route-id="@cliente.Id" class="btn btn-primary btn-sm">Listar Contas</a>
                    <form asp-action="Deletar" asp-route-id="@cliente.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja apagar este cliente?');">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>